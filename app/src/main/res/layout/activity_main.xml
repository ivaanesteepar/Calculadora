<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9acbcb"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTextoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_resultados"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <!-- Nueva fila para los botones de borrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Botones de borrado -->
            <Button
                android:id="@+id/button_delete"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#e7938c"
                android:gravity="center"
                android:text="B"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_clear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#e7938c"
                android:gravity="center"
                android:textSize="20sp"
                android:text="AC"/>
        </LinearLayout>

        <!-- Resto de los botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button4"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Segunda fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button8"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Tercera fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button10"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button11"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button12"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Cuarta fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button13"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button14"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/button15_background"
                android:gravity="center"
                android:text="@string/button15"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/button16"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
